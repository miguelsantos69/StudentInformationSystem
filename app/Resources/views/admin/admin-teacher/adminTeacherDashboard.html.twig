            <th>Adres</th>
            <th>Telefon</th>
            <th>Prowadzone przedmioty</th>
            <th>Klasy</th>
        </tr>
        {% for teacher in teachers %} 
            <tr>
                <td>{{teacher.name}}</td>
                <td>{{teacher.surname}}</td>
                <td>{{teacher.pesel}}</td>
                <td>{{teacher.email}}</td>
                <td>{{teacher.address}}</td>
                <td>{{teacher.phone}}</td>
