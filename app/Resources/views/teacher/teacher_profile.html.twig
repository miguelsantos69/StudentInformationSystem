{% extends 'base.html.twig' %}
{% block stylesheets %}   {% endblock %}


{% block body %}

    <hr class="">
    <div class="container target">
        <div class="row">
            <div class="col-sm-10">
                <h1 class="">{{teacher.name}} {{teacher.surname}}</h1>
                <button type="button" class="btn btn-info">Send me a message</button>
                <br>
            </div>

            <div class="col-sm-2">
                <a href="/users" class="pull-right">
                    <img class="img-thumbnail" src="{{ asset('uploads/avatars/' ~ teacher.avatar) }}"/>
                </a>
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col-sm-3">
                <ul class="list-group ">
                    <li class="list-group-item text-muted" contenteditable="false">Profile</li>
                    <li class="list-group-item"><span class="pull-left"><strong class="">Role:</strong></span> {{teacher.roles}} </li>
                    <li class="list-group-item"><span class="pull-left"><strong class="">Phone:</strong></span> {{teacher.phone}} </li>
                    <li class="list-group-item"><span class="pull-left"><strong class="">Address:</strong></span> {{teacher.address}} </li>
                </ul>
            </div>

            <div class="col-sm-9" style="" contenteditable="false">
                <div class="panel panel-default target">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="thumbnail">
                                    <div class="caption text-center">
                                        <h3>
                                            About me
                                        </h3>
                                        <p>
                                           {{ teacher.bio }}
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
        </div>

    {% endblock %}


